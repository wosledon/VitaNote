{
  "$schema": "https://json.schemastore.org/tsconfig",
  "displayName": "VitaNote TypeScript Configuration",
  "description": "TypeScript compiler options for VitaNote project",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "references": [
    {
      "path": "./backend"
    },
    {
      "path": "./frontend"
    },
    {
      "path": "./mobile"
    }
  ]
}
