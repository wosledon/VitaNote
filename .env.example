# 后端配置示例

# 数据库类型 (Sqlite/PostgreSQL)
ASPNETCORE_ENVIRONMENT=Development
Database__Type=Sqlite

# 连接字符串
# SQLite
Database__Sqlite__ConnectionString=Data Source=vitanote.db

# PostgreSQL
# Database__PostgreSQL__ConnectionString=Host=localhost;Port=5432;Database=vitanote;Username=postgres;Password=postgres

# JWT 设置
Jwt__SecretKey=YourSuperSecretKeyThatShouldBeAtLeast32CharactersLong!
Jwt__Issuer=VitaNote
Jwt__Audience=VitaNoteClient
Jwt__ExpirationHours=24

# OCR/LLM 服务
Ollama__Endpoint=http://localhost:11434
Ollama__Model=gpt-4o

# 存储配置
Storage__BasePath=uploads
Storage__PublicUrl=/uploads
