# 后端配置示例

# 数据库类型 (Sqlite/PostgreSQL)
ASPNETCORE_ENVIRONMENT=Production
Database__Type=PostgreSQL

# 连接字符串
Database__PostgreSQL__ConnectionString=Host=postgres;Port=5432;Database=vitanote;Username=postgres;Password=postgres

# JWT 设置
Jwt__SecretKey=YourProductionSecretKeyAtLeast32CharactersLong!
Jwt__Issuer=VitaNote
Jwt__Audience=VitaNoteClient
Jwt__ExpirationHours=24

# OCR/LLM 服务
Ollama__Endpoint=http://ollama:11434
Ollama__Model=gpt-4o

# 存储配置
Storage__BasePath=/app/uploads
Storage__PublicUrl=/uploads

# 日志级别
Logging__LogLevel__Default=Warning
Logging__LogLevel__Microsoft_AspNetCore=Warning
